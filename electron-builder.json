{
  "appId": "com.opdex.app",
  "productName": "Opdex Desktop",
  "directories": {
    "output": "dist/"
  },
  "files": [
    "dist/out-tsc/**/*",
    "dist/opdex-desktop/**/*",
    "package.json"
  ],
  "win": {
    "icon": "dist/opdex-desktop/assets/electron/win/icon",
    "target": [
      "nsis"
    ]
  },
  "mac": {
    "icon": "dist/opdex-desktop/assets/electron/mac/icon",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/opdex-desktop/assets/electron/png",
    "target": [
      "deb",
      "tar.gz"
    ],
    "synopsis": "Opdex Desktop"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "guid": "",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "msi": {
    "warningsAsErrors": false
  },
  "extraResources": [ ]
}
